# dTRINITY Ethereum Contracts Environment Variables
# Copy this file to .env and fill in your values

# Alchemy API Key for Ethereum RPC access
ALCHEMY_API_KEY=your_alchemy_api_key_here

# Etherscan API Key for contract verification
ETHERSCAN_API_KEY=your_etherscan_api_key_here

# Ethereum Mainnet Deployer Mnemonic
# SECURITY WARNING: Never commit real mainnet mnemonics to version control
MNEMONIC_ETHEREUM_MAINNET_DEPLOYER=your_mainnet_mnemonic_here

# Ethereum Testnet (Sepolia) Deployer Mnemonic
MNEMONIC_ETHEREUM_TESTNET_DEPLOYER=your_testnet_mnemonic_here

# Ethereum Mainnet Deployer Private Key (alternative to mnemonic)
# SECURITY WARNING: Never commit real mainnet private keys to version control
PK_ETHEREUM_MAINNET_DEPLOYER=your_mainnet_private_key_here

# Ethereum Testnet (Sepolia) Deployer Private Key (alternative to mnemonic)
PK_ETHEREUM_TESTNET_DEPLOYER=your_testnet_private_key_here

# Safe Protocol Configuration
# Set to 'true' to force Safe multisig mode for testing on non-mainnet networks
USE_SAFE=false

# Enable IR compilation for all contracts (slower but avoids stack too deep errors)
VIA_IR=false